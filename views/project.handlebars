<div class="text-center">
  <h2>{{name}}</h2>
  <p>{{{get_emoji}}}</p>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
</div>


{{#each comment as |comment| }}
{{!-- text from comment --}}
<h3>{{text}}</h3>
{{/each}}
<form id="comPost">
  
  <div class='form-group'>
    <label> Comment: </label>
    <textarea class="form-input" id="comtext" name="comtext"></textarea>
  </div>
  <input type="hidden" name="post_id" value="{{id}}" id="post_id" />
  <div class='form-group'>
    <button type="submit" class='btn btn-primary'>Submit</button>
  </div>

</form>
<script src='/js/profile.js'></script>