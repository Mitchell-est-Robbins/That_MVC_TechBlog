<div class="text-center">
  <h2>{{name}}</h2>
  <p>{{{get_emoji}}}</p>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
</div>


{{#each comments as |comment| }}
{{!-- text from comment --}}
<li>{{text}}</li>
{{/each}}


<form id="comment">
  
  <div class='form-group'>
    <label> Comment: </label>
    <textarea class="form-input" id="comtext" name="comtext"></textarea>
  </div>
  <input type="hidden" name="post_id" value="{{id}}" id="post_id" /> 
  {{!-- this input bit ^^ is thanks to Chuck --}}
  <div class='form-group'>
    <button id="comPost" type="button" class='btn btn-primary'>Submit</button>
  </div>

</form>

<script src="/js/comment.js"></script>